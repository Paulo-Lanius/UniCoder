<MudItem xs="4">
    <MudLink Href="@CardRoute" Style="text-decoration: none;">
        <MudCard Class="mud-elevation-10">
            <MudCardContent>
                <MudStack AlignItems="AlignItems.Center">
                    <MudIcon Icon="@CardIcon" Size="Size.Large" />
                </MudStack>
            </MudCardContent>
            <MudCardActions>
                <MudButton Href="@CardRoute" FullWidth="true">@CardText</MudButton>
            </MudCardActions>
        </MudCard>
    </MudLink>
</MudItem>

@code {
    [Parameter]
    public string CardRoute { get; set; } = "/";
    [Parameter]
    public string CardIcon { get; set; } = Icons.Material.Filled.Star;
    [Parameter]
    public string CardText { get; set; } = "Card";
}
