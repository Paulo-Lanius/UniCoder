@inherits LayoutComponentBase

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Color="Color.Primary" Fixed="false" Elevation="1">
        <MudSpacer />
        <MudText Typo="Typo.h2" Color="Color.Inherit">UniCoder</MudText>
        <MudSpacer />
    </MudAppBar>
    <MudMainContent Style="padding: 0px">
        <MudContainer>
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    private bool _drawerOpen = true;

    private void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}