@page "/"
@using UniCoder.Components

<PageTitle>UniCoder</PageTitle>

<MudContainer MaxWidth="MaxWidth.Medium">
    <MudText Typo="Typo.h3" Align="Align.Center">
        Codificar
    </MudText>

    <MudGrid Container Class="mt-4" GutterSize="GutterSize.Small" Justify="Justify.Center">
        <Card CardRoute="/rrepeat/encoder" CardIcon="@Icons.Material.Filled.EnhancedEncryption" CardText="R-Repeat" />
        <MudFlexBreak />
        <Card CardRoute="/hamming/encoder" CardIcon="@Icons.Material.Filled.EnhancedEncryption" CardText="Hamming" />
    </MudGrid>
</MudContainer>

<MudContainer MaxWidth="MaxWidth.Medium">
    <MudText Typo="Typo.h3" Align="Align.Center">
        Decodificar
    </MudText>

    <MudGrid Container Class="mt-4" GutterSize="GutterSize.Small" Justify="Justify.Center">
        <Card CardRoute="/rrepeat/decoder" CardIcon="@Icons.Material.Outlined.NoEncryption" CardText="R-Repeat" />
        <MudFlexBreak />
        <Card CardRoute="/hamming/decoder" CardIcon="@Icons.Material.Outlined.NoEncryption" CardText="Hamming" />
    </MudGrid>
</MudContainer>